<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.travel.seoul.mapper.UserMapper">
 	<insert id="insert" parameterType="com.travel.seoul.vo.UserVO">
 		insert into tbl_member values
 		(seq_user_serial.nextval, #{userID},#{userPassword},#{userBirth}, #{userSex},#{userArea})
 	</insert>
 	<select id="list" resultType="com.travel.seoul.vo.UserVO">
 		select * from tbl_member 	
 	</select>
 	
 	<delete id="delete" parameterType="com.travel.seoul.vo.UserVO">
 		delete from tbl_member where user_serial = #{user_Serial}
 	</delete>
 	<update id="update" parameterType="com.travel.seoul.vo.UserVO">
 		update tbl_member
 		  	set	
			 	user_name = #{userID},
			 	user_password = #{userPassword},
				user_addr1 = #{userBirth},
				user_addr2 = #{userSex},
				user_reg = #{userArea},
			where 	
				user_serial = #{userSerial}
 	</update>
</mapper>